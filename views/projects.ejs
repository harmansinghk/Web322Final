
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>

  <div class="container mx-auto my-6">
    <div class="hero bg-base-200 p-6 rounded-lg mb-4">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-4xl font-bold">All Climate Projects</h1>
          <p class="py-4">Click a sector or project for more info:</p>
          <div class="flex flex-wrap justify-center gap-2">
            <a href="/solutions/projects?sector=Industry" class="btn">Industry</a>
            <a href="/solutions/projects?sector=Transportation" class="btn">Transportation</a>
            <a href="/solutions/projects?sector=Electricity" class="btn">Electricity</a>
            <a href="/solutions/projects?sector=Land Sinks" class="btn">Land Sinks</a>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(p => { %>
            <tr>
              <td><%= p.title %></td>
              <td><a class="btn btn-sm" href="/solutions/projects?sector=<%= p.sector %>"><%= p.sector %></a></td>
              <td><%= p.summary_short %></td>
              <td><a class="btn btn-outline btn-sm" href="/solutions/projects/<%= p.id %>">Details</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

