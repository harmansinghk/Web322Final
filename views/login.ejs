<%- include("partials/navbar", { page: "/login" }) %>

<div class="container mx-auto px-4 py-10 max-w-md">
  <div class="hero bg-base-200 rounded-xl mb-6">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-4xl font-bold">Login</h1>
        <p class="py-4">Enter your credentials to access your account.</p>
      </div>
    </div>
  </div>

  <form action="/login" method="POST" class="space-y-4 max-w-xl mx-auto">
    <input type="text" name="userName" placeholder="User Name" required class="input input-bordered w-full" value="<%= userName %>">
    <input type="password" name="password" placeholder="Password" required class="input input-bordered w-full">
    <button type="submit" class="btn btn-primary w-full">Login</button>
  </form>

  <% if (errorMessage) { %>
  <div class="alert alert-error mt-4 max-w-xl mx-auto">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none"
      viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <span><%= errorMessage %></span>
  </div>
  <% } %>
</div>
