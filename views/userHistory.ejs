<%- include("partials/navbar", { page: "/userHistory" }) %>


<div class="container mx-auto px-4 py-10">
  <div class="hero bg-base-200 rounded-xl mb-6">
    <div class="hero-content text-center">
      <div class="max-w-lg">
        <h1 class="text-4xl font-bold">User History</h1>
        <p class="py-4">User: <strong><%= session.user.userName %></strong> (<%= session.user.email %>)</p>
      </div>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="table table-zebra w-full">
      <thead>
        <tr>
          <th>Login Date/Time</th>
          <th>Client Information</th>
        </tr>
      </thead>
      <tbody>
        <% session.user.loginHistory.forEach(entry => { %>
        <tr>
          <td><%= entry.dateTime %></td>
          <td><%= entry.userAgent %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
