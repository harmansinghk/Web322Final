<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Project</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <%- include("partials/navbar", { page: "" }) %>

<div class="container mx-auto px-4 py-10">
  <div class="hero bg-base-200 rounded-xl mb-6">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-4xl font-bold">Edit Project</h1>
        <p class="py-4 text-lg">Modify the fields below to update project: <strong><%= project.title %></strong></p>
      </div>
    </div>
  </div>

  <form action="/solutions/editProject" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <input type="hidden" name="id" value="<%= project.id %>">

    <div class="form-control">
      <label class="label font-semibold">Project Title</label>
      <input class="input input-bordered w-full" type="text" name="title" value="<%= project.title %>" required>
    </div>

    <div class="form-control">
      <label class="label font-semibold">Feature Image URL</label>
      <input class="input input-bordered w-full" type="url" name="feature_img_url" value="<%= project.feature_img_url %>" required>
    </div>

    <div class="form-control md:col-span-2">
      <label class="label font-semibold">Select Sector</label>
      <select class="select select-bordered w-full" name="sector_id" required>
        <% sectors.forEach(sector => { %>
          <option value="<%= sector.id %>" <%= (project.sector_id == sector.id) ? 'selected' : '' %>>
            <%= sector.sector_name %>
          </option>
        <% }); %>
      </select>
    </div>

    <div class="form-control md:col-span-2">
      <label class="label font-semibold">Short Introduction</label>
      <textarea class="textarea textarea-bordered w-full" name="intro_short" rows="3" required><%= project.intro_short %></textarea>
    </div>

    <div class="form-control md:col-span-2">
      <label class="label font-semibold">Short Summary</label>
      <textarea class="textarea textarea-bordered w-full" name="summary_short" rows="3" required><%= project.summary_short %></textarea>
    </div>

    <div class="form-control md:col-span-2">
      <label class="label font-semibold">Impact</label>
      <textarea class="textarea textarea-bordered w-full" name="impact" rows="3" required><%= project.impact %></textarea>
    </div>

    <div class="form-control md:col-span-2">
      <label class="label font-semibold">Original Source URL</label>
      <input class="input input-bordered w-full" type="url" name="original_source_url" value="<%= project.original_source_url %>" required>
    </div>

    <div class="form-control md:col-span-2 flex flex-col md:flex-row gap-4 mt-4">
      <button class="btn btn-success w-half" type="submit">Update Project</button>
      <a class="btn btn-error w-half" href="/solutions/deleteProject/<%= project.id %>">Delete Project</a>
    </div>
  </form>
</div>


</body>
</html>


